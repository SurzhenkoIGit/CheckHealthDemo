@page
   @model Microsoft.Extensions.Diagnostics.HealthChecks.HealthReport
@{
    ViewData["Title"] = "Health Check Results";
}

<h2>Health Check Results</h2>

<table class="table">
    <thead>
        <tr>
            <th>Component</th>
            <th>Status</th>
            <th>Duration (ms)</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var entry in Model.Entries)
        {
            <tr>
                <td>@entry.Key</td>
                <td>@entry.Value.Status.ToString()</td>
                <td>@entry.Value.Duration.TotalMilliseconds</td>
                <td>@entry.Value.Description</td>
            </tr>
        }
    </tbody>
</table>
